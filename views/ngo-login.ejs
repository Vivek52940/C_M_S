            <textarea type="text" rows="7" cols="40" placeholder="input some information about ngo" id="ngo_information" name="ngo_information" class="formdata" value="we works"></textarea>
            <label for="bank details">Enter bank details</label>
            <input type="text" name="bank_name" placeholder="Enter your bank name" id="bank_name" class="formdata" >
            <input type="text" name="ifsc_code" placeholder="Enter your account IFSC code" id="ifsc_code" class="formdata" >
            <input type="text" name="account_no" placeholder="Enter your bank account no" id="account_no" class="formdata" >
            <input type="date" id="mydate" class="formdata" name="date"> 
